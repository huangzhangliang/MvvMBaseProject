<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/navContainer"
        android:layout_width="match_parent"
        android:background="@color/colorTheme"
        android:layout_height="@dimen/dp_56">
        <LinearLayout
            android:id="@+id/placeholderContainer"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_56">
        </LinearLayout>

        <LinearLayout
            android:id="@+id/headerLeftLayout"
            android:orientation="horizontal"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/btnNavBack"
                android:layout_width="@dimen/dp_56"
                android:layout_height="@dimen/dp_56"
                android:background="@drawable/btn_theme_selector"
                android:padding="@dimen/dp_20"
                android:scaleType="fitCenter"
                android:layout_gravity="center"
                android:src="@mipmap/ic_back" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/headerCenterLayout"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvNavTitle"
                android:textSize="@dimen/dp_20"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/headerRightLayout"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </LinearLayout>



            <!--<android.support.v4.view.ViewPager-->
            <!--android:id="@+id/home_pager"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--app:layout_behavior="@string/appbar_scrolling_view_behavior">-->
            <!--</android.support.v4.view.ViewPager>-->

    </RelativeLayout>
</layout>